{
  "name": "@mcp-z/client",
  "version": "1.0.7",
  "description": "Programmatic MCP client library for Node.js - connect, discover, and call tools on Model Context Protocol servers.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "mcp-client",
    "server",
    "client",
    "lib",
    "token-storage",
    "testing",
    "integration-testing",
    "development-tools",
    "server-management",
    "lifecycle",
    "graceful-shutdown",
    "test-utilities",
    "workflow",
    "ai",
    "claude"
  ],
  "homepage": "https://github.com/mcp-z/cli#readme",
  "bugs": {
    "url": "https://github.com/mcp-z/cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-z/cli.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff.info@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "schemas",
    "AGENTS.md"
  ],
  "scripts": {
    "build": "tsds validate",
    "format": "tsds format",
    "generate:types": "json2ts schemas/servers.schema.json schemas/servers.d.ts --bannerComment \"/* eslint-disable */\n/* Auto-generated from schemas/servers.schema.json - DO NOT EDIT */\"",
    "prepublish:check": "ncp",
    "prepublishOnly": "tsds validate",
    "test": "npm run test:unit && npm run test:integration",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "test:integration": "tsds test:node --no-timeouts 'test/integration/**/*.test.ts'",
    "test:unit": "tsds test:node --no-timeouts 'test/unit/**/*.test.ts'",
    "version": "tsds version"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.0.0",
    "ajv-formats": "^3.0.0",
    "get-port": "^7.0.0",
    "keyv": "^5.0.0",
    "keyv-file": "^5.0.0",
    "module-root-sync": "^2.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "node-version-use": "^2.4.7",
    "ts-dev-stack": "^1.22.1",
    "tsds-config": "^1.0.4",
    "zod": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
